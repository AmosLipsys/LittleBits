<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mossy.littlebits">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Home"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:configChanges="orientation"
            android:label="@string/title_activity_register"
            android:parentActivityName=".Home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mossy.littlebits.Home" />
        </activity>
        <activity
            android:name=".Login"
            android:configChanges="orientation"
            android:label="@string/title_activity_login"
            android:parentActivityName=".Home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mossy.littlebits.Home" />
        </activity>
        <activity
            android:name=".GameMenu"
            android:configChanges="orientation"
            android:label="@string/title_activity_game_menu"
            android:parentActivityName=".Home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mossy.littlebits.Home" />
        </activity>
        <activity
            android:name=".Tutorial"
            android:configChanges="orientation"
            android:label="@string/title_activity_tutorial"
            android:parentActivityName=".GameMenu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mossy.littlebits.GameMenu" />
        </activity>
        <activity
            android:name=".IfAndElseTutorial"
            android:configChanges="orientation"
            android:label="@string/title_activity_if_and_else_tutorial"
            android:parentActivityName=".Tutorial"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mossy.littlebits.Tutorial" />
        </activity>
        <activity
            android:name=".ForLoopTutorial"
            android:label="@string/title_activity_for_loop_tutorial"
            android:parentActivityName=".Tutorial"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mossy.littlebits.Tutorial" />
        </activity>
        <activity
            android:name=".WhileLoopTutorial"
            android:label="@string/title_activity_while_loop_tutorial"
            android:parentActivityName=".Tutorial"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mossy.littlebits.Tutorial" />
        </activity>
        <activity
            android:name=".Beginner"
            android:label="@string/title_activity_beginner"
            android:parentActivityName=".GameMenu"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mossy.littlebits.GameMenu" />
        </activity>
        <activity
            android:name=".Advanced"
            android:label="@string/title_activity_advanced"
            android:parentActivityName=".GameMenu"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mossy.littlebits.GameMenu" />
        </activity>
        <activity
            android:name=".Expert"
            android:label="@string/title_activity_expert"
            android:parentActivityName=".GameMenu"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mossy.littlebits.GameMenu" />
        </activity>
        <activity
            android:name=".Game"
            android:label="@string/title_activity_game"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>